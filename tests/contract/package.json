{
  "name": "contract-tests",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run test",
    "test": "cross-env ENVIRONMENT_NAME=local npm run test:env",
    "test:env": "cross-env ENVIRONMENT_NAME=${ENVIRONMENT_NAME} NODE_TLS_REJECT_UNAUTHORIZED=0 JEST_JUNIT_OUTPUT_NAME=contract.junit.xml jest --verbose --runInBand --testResultsProcessor='jest-junit'"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.2.0",
    "@types/jest": "^27.0.1",
    "@types/request": "^2.48.7",
    "@types/uuid": "^8.3.4",
    "axios": "^0.21.4",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^3.2.0",
    "jest": "^27.1.1",
    "jest-junit": "^13.0.0",
    "jest-openapi": "^0.14.0",
    "request": "^2.88.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  },
  "jest-junit": {
    "outputDirectory": "./_test-results",
    "outputName": "${JEST_JUNIT_OUTPUT_NAME}"
  },
  "jest": {
    "clearMocks": true,
    "coverageProvider": "v8",
    "preset": "ts-jest",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "roots": [
      "./"
    ],
    "setupFiles": [
      "<rootDir>/setupTests.ts"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.[jt]s",
      "**/?(*.)+(spec).[jt]s"
    ],
    "testPathIgnorePatterns": [
      "\\\\node_modules\\\\",
      "\\\\generated\\\\"
    ],
    "testResultsProcessor": "jest-junit",
    "testTimeout": 30000
  },
  "dependencies": {
    "node.js": "^0.0.1-security"
  }
}
